<!DOCTYPE html>
<html>
<head>
  <title>PieReact</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='//fonts.googleapis.com/css?family=Amita:700' rel='stylesheet' type='text/css'>
</head>
<body>

<!-- tool-bar -->
<header>
  <% if user_signed_in? %>
    <h1 class="logo">Picky Eater</h1>
    <div class="header__links">
      <% if current_user.is_admin %>
      <% end %>
      <%= link_to "Home", root_path %>
      <%= link_to "User Profile", user_path(current_user) %>
      <%= link_to "Sign Out", logout_path %>
    </div>
  <% end %>

</header>

<%= yield %>

</body>
</html>
